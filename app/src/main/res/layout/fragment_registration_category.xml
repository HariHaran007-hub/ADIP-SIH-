<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.registrationportal.RegistrationCategoryFragment">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_8sdp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration portal"
            android:textSize="@dimen/_20ssp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/mplus_rounded_1c_extra_bold"
            android:layout_marginBottom="@dimen/_20ssp"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="@color/pink"
            app:strokeWidth="@dimen/_2sdp"
            app:cardBackgroundColor="@color/pinkFaded"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Required Documents:"
                    android:textSize="@dimen/_14ssp"
                    android:padding="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/mplus_rounded_1c_bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:text="⦿ All the required documents"
                    android:paddingStart="@dimen/_20sdp"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:text="⦿ All the required documents"
                    android:paddingStart="@dimen/_20sdp"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:text="⦿ All the required documents"
                    android:paddingStart="@dimen/_20sdp"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:text="⦿ All the required documents"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:textSize="@dimen/_12ssp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="@dimen/_12ssp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="@color/pink"
            app:strokeWidth="@dimen/_2sdp"
            app:cardBackgroundColor="@color/pinkFaded"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="@dimen/_14ssp"
                    android:padding="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/mplus_rounded_1c_bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:text="⦿ All the required documents"
                    android:paddingStart="@dimen/_20sdp"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:text="⦿ All the required documents"
                    android:paddingStart="@dimen/_20sdp"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:text="⦿ All the required documents"
                    android:paddingStart="@dimen/_20sdp"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:text="⦿ All the required documents"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:text="⦿ All the required documents"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:text="⦿ All the required documents"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:text="⦿ All the required documents"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:textSize="@dimen/_12ssp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:text="⦿ All the required documents"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:textSize="@dimen/_12ssp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12ssp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_enabled"
            android:text="Continue"/>

        <TextView
            android:id="@+id/tvStatus"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12ssp"
            android:textColor="@color/pink"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="@dimen/_10sdp"
            android:fontFamily="@font/mplus_rounded_1c_extra_bold"
            android:text="Already uploaded please see status bar for more information."/>



    </LinearLayout>





</LinearLayout>