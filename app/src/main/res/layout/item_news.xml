<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_2sdp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:strokeColor="@color/pink"
    app:strokeWidth="1dp"
    android:layout_height="@dimen/_150sdp">


    <RelativeLayout
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/headLinesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mplus_rounded_1c_black"
            android:maxEms="5"
            android:padding="@dimen/_2sdp"
            android:paddingStart="@dimen/_10ssp"
            android:text="New ADIP registration portal application has bee created!!"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headLinesTextView"
            android:paddingStart="@dimen/_10sdp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/headLineImage"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:contentDescription="image"
                android:cropToPadding="true"
                android:src="@drawable/elon"
                app:riv_corner_radius="@dimen/_5sdp" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mplus_rounded_1c_regular"
                android:maxEms="15"
                android:paddingStart="@dimen/_10ssp"
                android:text="New applivation was made and this applicatopn we have integrated google maps ans some oter new features in it and it will be goin to be a bigest hit"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>