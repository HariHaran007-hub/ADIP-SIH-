<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/white"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ivSplashBackground"
        app:lottie_imageAssetsFolder="images"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_gravity="center"
        android:layout_below="@+id/ivAppLogo"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/backgroundLottieAnimlottie" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/mplus_rounded_1c_bold"
        android:gravity="center"
        android:text="@string/find_therapasist_from_tcube_at_home"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp" />

</androidx.appcompat.widget.LinearLayoutCompat>